<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneSms" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="appBarLayoutStyle">@style/appBarLayout</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="cardViewStyle">@style/Card</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Card" parent="CardView.Light">
        <item name="cardCornerRadius">10dp</item>
    </style>


    <style name="appBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextBlack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="CardViewEdit" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#F6F6F6</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
</resources>